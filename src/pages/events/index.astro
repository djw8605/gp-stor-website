---
import { getCollection } from 'astro:content';
import Layout from '~/layouts/PageLayout.astro';

const events = await getCollection('events');

// Sort by date, newest first
events.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const metadata = {
  title: 'Events',
};
---

<Layout metadata={metadata}>
  <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-4xl">
    <header class="mb-12">
      <h1 class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading">
        Events
      </h1>
      <p class="text-xl text-muted">
        Upcoming and past GP-STOR events
      </p>
    </header>

    {events.length === 0 ? (
      <div class="text-center py-12">
        <p class="text-xl text-muted">No events scheduled. Check back soon!</p>
      </div>
    ) : (
      <div class="grid gap-6 md:gap-8">
        {events.map((event) => (
          <article class="border border-gray-200 dark:border-gray-700 rounded-lg p-6 hover:shadow-lg transition-shadow">
            <h2 class="text-2xl font-bold mb-2">
              <a
                href={`/events/${(event.slug ?? event.id).replace(/\.md$/, '')}`}
                class="hover:text-primary"
              >
                {event.data.title}
              </a>
            </h2>
            <div class="flex items-center gap-4 text-sm text-muted mb-3">
              <div class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <time datetime={event.data.date.toISOString()}>
                  {event.data.date.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                  })}
                </time>
              </div>
              <div class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <span>{event.data.location}</span>
              </div>
            </div>
            <p class="text-muted mb-4">{event.data.description}</p>
            {event.data.tags && event.data.tags.length > 0 && (
              <div class="flex flex-wrap gap-2">
                {event.data.tags.map((tag) => (
                  <span class="px-2 py-1 text-xs bg-gray-100 dark:bg-gray-800 rounded">
                    {tag}
                  </span>
                ))}
              </div>
            )}
          </article>
        ))}
      </div>
    )}
  </section>
</Layout>
