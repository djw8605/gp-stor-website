---
// Blog index page
import { getCollection } from 'astro:content';
import PageLayout from '../../layouts/PageLayout.astro';

// Get all blog posts, filter out drafts, and sort by date
const allPosts = await getCollection('blog');
const posts = allPosts
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  }).format(date);
};
---

<PageLayout
  title="Blog - GP-STOR"
  description="Latest news and updates from the GP-STOR team"
>
  <section class="py-16 md:py-24">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Blog</h1>
        <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          Latest news, updates, and insights from the GP-STOR team
        </p>
      </div>

      <div class="max-w-4xl mx-auto space-y-8">
        {posts.map((post) => (
          <article class="bg-white dark:bg-gray-800 rounded-lg shadow-md border border-gray-200 dark:border-gray-700 p-6 hover:shadow-lg transition-shadow">
            <div class="mb-4">
              <a href={`/blog/${post.id}/`} class="group">
                <h2 class="text-2xl font-bold mb-2 group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors">
                  {post.data.title}
                </h2>
              </a>
              <div class="flex items-center gap-4 text-sm text-gray-600 dark:text-gray-400">
                <time datetime={post.data.pubDate.toISOString()}>
                  {formatDate(post.data.pubDate)}
                </time>
                {post.data.tags.length > 0 && (
                  <div class="flex gap-2">
                    {post.data.tags.map((tag) => (
                      <span class="px-2 py-1 bg-purple-100 dark:bg-purple-900/30 text-purple-600 dark:text-purple-400 rounded text-xs font-medium">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
              </div>
            </div>
            {(post.data.description || post.data.summary) && (
              <p class="text-gray-600 dark:text-gray-400 mb-4">
                {post.data.description || post.data.summary}
              </p>
            )}
            <a
              href={`/blog/${post.id}/`}
              class="inline-flex items-center text-purple-600 dark:text-purple-400 hover:underline font-medium"
            >
              Read more
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
          </article>
        ))}

        {posts.length === 0 && (
          <div class="text-center py-12">
            <p class="text-gray-600 dark:text-gray-400">No blog posts yet. Check back soon!</p>
          </div>
        )}
      </div>
    </div>
  </section>
</PageLayout>
