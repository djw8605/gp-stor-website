---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Steps from '~/components/widgets/Steps.astro';
import StatusSteps from '~/components/widgets/StatusSteps.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import EventsLatestPosts from '~/components/widgets/EventsLatestPosts.astro';
import AnimatedLogo from '~/assets/animated-logo.png';
import CentralStates from '~/assets/central_states_map.svg';

const metadata = {
  title: 'Great Plains Scalable Tiered Object Repository',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero2
    actions={[
      { text: 'Overview', href: '/docs/overview', variant: 'primary' },
      { text: 'Roadmap', href: '#roadmap', variant: 'secondary' },
    ]}
    image={{
      src: AnimatedLogo,
      alt: 'Connecting to computers',
      style: 'object-fit: contain'
    }}
  >
    <Fragment slot="title">
      Great Plains Scalable Tiered Object Repository
    </Fragment>

    <Fragment slot="subtitle">
      Providing distributed, resilient storage infrastructure to accelerate research across the Great Plains region.
    </Fragment>
  </Hero2>

  <!-- Features Widget *************** -->
  <Features
    id="features"
    tagline="Features"
    title="Explore the features of the GP-STOR platform"
    subtitle="GP-STOR provides distributed, resilient storage infrastructure designed to accelerate research across the Great Plains region."
    items={[
      {
        title: 'Tiered, Distributed Storage',
        description: '14 PB of redundant Ceph object storage plus 384 TB of high-speed solid-state storage designed for AI/ML streaming, simulation output, and instrument data.',
        icon: 'tabler:server',
      },
      {
        title: 'Three-Site Resilience',
        description: 'Storage resources distributed across the University of Missouri, University of Nebraska, and University of South Dakota for availability and redundancy.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Researcher-Friendly Access',
        description: 'Mounts for OSG and the National Research Platform, OSDF Origin nodes, Globus endpoints, and a web-based UI via Nextcloud.',
        icon: 'tabler:cloud',
      },
      {
        title: 'Training and Workforce Development',
        description: 'Virtual office hours, video walkthroughs, and step-by-step guides cultivate an engineering and facilitation workforce across the region.',
        icon: 'tabler:school',
      },
    ]}
    >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-[#D7F0E1] dark:bg-slate-800"></div>
    </Fragment>
    </Features>

  <!-- Events Widget ******************* -->
  <EventsLatestPosts
    title="Latest Events"
    information="Stay updated with the latest workshops, trainings, and community events."
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </EventsLatestPosts>

  <!-- Content Widget 1: What GP-STOR Provides *** -->
  <Content
    title="What GP-STOR Provides"
    subtitle="Discover the powerful storage infrastructure designed for modern research workflows"
    isReversed={false}
    items={[
      {
        title: 'Massive Capacity',
        description:
          '14 petabytes of redundant, distributed Ceph object storage provides the scale needed for large-scale research datasets, simulations, and archives.',
      },
      {
        title: 'High-Speed Access',
        description:
          '384 TB of high-speed solid-state storage optimized for streaming data into AI/ML algorithms and out of simulations and instruments in real-time.',
      },
      {
        title: 'Regional Resilience',
        description:
          'Three-site distribution across the University of Missouri, University of Nebraska, and University of South Dakota ensures data availability and redundancy.',
      },
      {
        title: 'Flexible Access',
        description:
          'Researcher-friendly access through web-based UI, mounts for OSG and NRP, OSDF Origin nodes, and Globus endpoints.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1504384308090-c894fdcc538d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80',
      alt: 'Research data visualization',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Infrastructure Built for <br /><span class="text-2xl">Research at Scale</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-[#D7F0E1] dark:bg-slate-800"></div>
    </Fragment>
  </Content>

  <!-- Content Widget 2: Web Interface & Usability *** -->
  <Content
    title="Web Interface & Usability"
    subtitle="Accessible storage management for researchers of all technical levels"
    isReversed={true}
    items={[
      {
        title: 'Intuitive Web UI',
        description:
          'Access and manage your research data through a familiar web-based interface powered by Nextcloud, eliminating the need for complex command-line tools.',
      },
      {
        title: 'User-Friendly Design',
        description:
          'Browse, upload, download, and organize files with an intuitive interface designed with researchers in mind. No advanced IT skills required.',
      },
      {
        title: 'Real-Time Collaboration',
        description:
          'Share research data with collaborators across institutions with fine-grained access controls and secure file sharing capabilities.',
      },
      {
        title: 'Comprehensive Documentation',
        description:
          'Virtual office hours, video walkthroughs, and step-by-step guides ensure you can quickly get started and resolve any challenges.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1551288049-bebda4e38f71?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80',
      alt: 'Web Interface',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Storage Made Simple: <br /><span class="text-2xl">Access Your Data Anywhere</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-[#F0E7D7] dark:bg-slate-800"></div>
    </Fragment>
  </Content>

  <!-- Content Widget 3: Research Use Cases *** -->
  <Content
    title="Research Use Cases"
    subtitle="GP-STOR accelerates discovery across diverse scientific domains"
    isReversed={false}
    items={[
      {
        title: 'AI & Machine Learning',
        description:
          'The high-speed solid-state tier enables rapid data streaming into ML algorithms, supporting cutting-edge artificial intelligence research workflows.',
      },
      {
        title: 'Scientific Simulations',
        description:
          'Efficiently capture and store massive simulation outputs, enabling researchers to focus on analysis rather than data management challenges.',
      },
      {
        title: 'Instrument Data Pipelines',
        description:
          'Seamlessly integrate data from research instruments and sensors, with automated pipelines for processing and archival.',
      },
      {
        title: 'Educational Integration',
        description:
          'Provide students with hands-on experience using modern cyberinfrastructure in classroom settings and research projects.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1504384308090-c894fdcc538d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80',
      alt: 'Research Use Cases',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Accelerate Discovery: <br /><span class="text-2xl">From Data to Insights</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-[#E7D7F0] dark:bg-slate-800"></div>
    </Fragment>
  </Content>

  <!-- Content Widget 4: Regional Impact *** -->
  <Content
    title="Regional Impact"
    subtitle="Building research capacity across the Great Plains"
    isReversed={true}
    items={[
      {
        title: 'Rural Infrastructure',
        description:
          'Addresses the unique challenges of deploying advanced cyberinfrastructure in rural regions where resources and awareness of HTC capabilities are emerging.',
      },
      {
        title: 'Workforce Development',
        description:
          'Cultivates an engineering and facilitation workforce capable of designing and implementing advanced research platforms across the region.',
      },
      {
        title: 'Institutional Support',
        description:
          'Builds campus research capacity and innovation infrastructure at universities across the Great Plains, including PUIs and tribal colleges.',
      },
      {
        title: 'Economic Growth',
        description:
          'Supports industrial sectors critical for regional economic development, including agriculture and advanced materials research.',
      },
    ]}
    image={{
      src: CentralStates,
      alt: 'Central States Map',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Empowering the Great Plains: <br /><span class="text-2xl">Research Infrastructure for All</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-[#F0E7D7] dark:bg-slate-800"></div>
    </Fragment>
  </Content>

  <!-- Timeline / Steps Widget ******* -->
  <StatusSteps
    id="roadmap"
    title="GP-STOR Roadmap"
    subtitle="Our development and deployment schedule from infrastructure acquisition through public access and community engagement."
    items={[
      {
        title: 'Q4 2024: Infrastructure acquisition',
        description: 'Finalize specifications and procure infrastructure for GP‑STOR.',
        icon: 'tabler:shopping-cart',
        status: 'active',
      },
      {
        title: 'Q1 2025: Receive hardware',
        description: 'Delivery and rack/cabinet intake at sites; begin inventory and staging.',
        icon: 'tabler:truck-delivery',
        status: 'todo',
      },
      {
        title: 'Q1-Q2 2025: Deploy and configure',
        description: 'Install CEPH clusters across sites, configure replication, pools, and monitoring.',
        icon: 'tabler:settings',
        status: 'todo',
      },
      {
        title: 'Q2 2025: Deploy storage interfaces',
        description: 'Enable access methods such as a web interface and mounting on National Research Platform.',
        icon: 'tabler:plug-connected',
        status: 'todo',
      },
      {
        title: 'Q3 2025: Beta users',
        description: 'Onboard early adopters for real-world testing and performance tuning.',
        icon: 'tabler:users',
        status: 'todo',
      },
      {
        title: 'Q4 2025: Open access & trainings',
        description: 'Public access opens, training sessions held, and operational support transitions to steady‑state.',
        icon: 'tabler:door-enter',
        status: 'todo',
      },
      {
        title: 'Q2 2026: Convene user group',
        description: 'Bring together early stakeholders and beta participants to solicit feedback on service design and policies.',
        icon: 'tabler:users-group',
        status: 'todo',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get Started',
        href: '/docs/overview',
        icon: 'tabler:rocket',
      },
      {
        variant: 'secondary',
        text: 'Contact Us',
        href: '/docs/contact',
        icon: 'tabler:mail',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to accelerate your research?
    </Fragment>

    <Fragment slot="subtitle">
      Join GP-STOR today and leverage distributed, resilient storage infrastructure across the Great Plains region.
    </Fragment>
  </CallToAction>
</Layout>
