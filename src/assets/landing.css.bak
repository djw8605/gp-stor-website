/* Button Styling */
.sl-link-button[data-variant="primary"],
button.primary,
a.button-primary {
	background-color: var(--color-accent-purple);
	transition: background-color 0.3s ease;
}

.sl-link-button[data-variant="primary"]:hover,
button.primary:hover,
a.button-primary:hover {
	background-color: var(--color-accent-purple-hover);
}

.sl-link-button[data-variant="secondary"],
button.secondary,
a.button-secondary {
	background-color: var(--color-accent-blue);
	color: white;
	transition: background-color 0.3s ease;
}

.sl-link-button[data-variant="secondary"]:hover,
button.secondary:hover,
a.button-secondary:hover {
	background-color: var(--color-accent-blue-hover);
}

