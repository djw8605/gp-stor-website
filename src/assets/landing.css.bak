/* Footer dark mode support */
.nsf-footer-text {
	color: var(--color-text-muted) !important;
}

.nsf-footer-text a {
	color: var(--color-accent-purple) !important;
}

.nsf-footer-text a:hover {
	color: var(--color-accent-purple-hover) !important;
}