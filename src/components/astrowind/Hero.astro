---
// Hero component - Astrowind style
export interface Action {
  text: string;
  href: string;
  variant?: 'primary' | 'secondary';
}

interface Props {
  title: string;
  tagline?: string;
  actions?: Action[];
  image?: string;
}

const { title, tagline, actions = [], image } = Astro.props;
---

<section class="relative py-16 md:py-24 lg:py-32 overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-green-50 to-blue-50 dark:from-gray-900 dark:to-gray-800 -z-10"></div>
  
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="text-center lg:text-left">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
          {title}
        </h1>
        {tagline && (
          <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-400 mb-8">
            {tagline}
          </p>
        )}
        {actions.length > 0 && (
          <div class="flex flex-wrap gap-4 justify-center lg:justify-start">
            {actions.map((action) => (
              <a
                href={action.href}
                class={`inline-flex items-center px-6 py-3 rounded-lg font-semibold transition-colors ${
                  action.variant === 'secondary'
                    ? 'bg-white dark:bg-gray-800 text-gray-900 dark:text-white border-2 border-gray-300 dark:border-gray-700 hover:border-gray-400 dark:hover:border-gray-600'
                    : 'bg-purple-600 hover:bg-purple-700 text-white'
                }`}
              >
                {action.text}
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </a>
            ))}
          </div>
        )}
      </div>

      <!-- Image -->
      {image && (
        <div class="flex justify-center lg:justify-end">
          <img
            src={image}
            alt="Hero illustration"
            class="max-w-full h-auto rounded-lg shadow-2xl"
            width="600"
            height="600"
          />
        </div>
      )}
    </div>
  </div>
</section>
