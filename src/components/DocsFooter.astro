---
import Default from '@astrojs/starlight/components/Footer.astro';

export interface Props {
  links: Array<any>;
  secondaryLinks: Array<any>;
  socialLinks: Array<any>;
  footNote?: string;
  theme?: string;
  pagination?: {
    prev?: { href: string; title: string };
    next?: { href: string; title: string };
  };
  editUrl?: string;
}

const { links, secondaryLinks, socialLinks, footNote, theme, pagination, editUrl } = Astro.props;
---

<div>
  <!-- Reuse the Default Footer and pass all required props -->
  <Default 
    links={links} 
    secondaryLinks={secondaryLinks} 
    socialLinks={socialLinks} 
    footNote={footNote} 
    theme={theme}
    pagination={pagination}
    editUrl={editUrl}
  >
    <slot />
  </Default>

  <!-- NSF Acknowledgment Section -->
  <div style="display: flex; align-items: center; justify-content: space-between; margin-top: 2rem; gap: 0.5rem;">
    <!-- NSF Logo -->
    <div style="display: flex; align-items: center;">
      <img
        src="/images/nsf-logo.png" 
        alt="NSF Logo"
        style="height: 5rem; width: auto; object-fit: contain;"
      />
    </div>
  
    <!-- Footer Text -->
    <div style="font-size: 0.875rem; color: #4b5563;">
        This work was supported in part by National Science Foundation (NSF) award <a href="https://www.nsf.gov/awardsearch/show-award?AWD_ID=2502799">OAC-2502799</a>.
    </div>
  </div>
</div>

<style>
  @media (prefers-color-scheme: dark) {
    div[style*="color: #4b5563"] {
      color: #9ca3af !important;
    }
  }
</style>
